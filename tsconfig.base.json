{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "module": "es2020",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2015",
        "lib": ["es2018", "es2020", "dom"],
        "types": ["node"]
    },
    "angularCompilerOptions": {
        "enableIvy": true
    },
    "compileOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
